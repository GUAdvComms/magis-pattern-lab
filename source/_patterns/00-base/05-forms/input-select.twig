<select
    class="form-control"    
    name="{{ name|default("select") }}"
    id="{{ name|default("select") }}"
    {% if disabled %}disabled="disabled"{% endif %}
    {% if required %}required="required"{% endif %}
  >

    {% for option in options %}

      <option value="{{ option.value }}">{{ option.label }}</option>

    {% endfor %}

</select>

